@page "/categories/edit"
@using ProjectMoviesDiasteros.Client.Pages.Components;
<FormCategory Category="Category" OnValidSubmit="Edit"></FormCategory>

@code
{
    [Parameter] public int Id{get;set;}
    private Category Category;

    protected override void OnInitialized()
    {
        Category = new Category()
        {
            Id = Id,
            Name = "Ciencia Ficción"
        };
    }

    private void Edit()
    {
        Console.WriteLine($"Actualizando la categoría id {Category.Id} nombre {Category.Name}");
    }    
}